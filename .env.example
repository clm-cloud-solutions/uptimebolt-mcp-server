# Required — UptimeBolt API base URL
UPTIMEBOLT_API_URL=https://api.uptimebolt.io

# Required for stdio mode only — your UptimeBolt API key
UPTIMEBOLT_API_KEY=uptb_your-api-key-here

# Optional — HTTP server port (default: 3100)
MCP_HTTP_PORT=3100

# Optional — log level: error, warn, info, debug (default: debug in dev, info in prod)
LOG_LEVEL=debug

# Optional — set to "production" to disable console logs
NODE_ENV=development
